<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Passenger</th>
      <th>Distini</th>
      <th>Distfin</th>
      <th>Monto</th>
      <th>Direcexini</th>
      <th>Directexfin</th>
      <th>Pasajeros</th>
      <th>Tipovehiculo</th>
      <th>Tipopago</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.passenger %></td>
        <td><%= request.distini %></td>
        <td><%= request.distfin %></td>
        <td><%= request.monto %></td>
        <td><%= request.direcexini %></td>
        <td><%= request.directexfin %></td>
        <td><%= request.pasajeros %></td>
        <td><%= request.tipovehiculo %></td>
        <td><%= request.tipopago %></td>
        <td><%= request.estado %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

